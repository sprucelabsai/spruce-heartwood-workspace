{
    "name": "@sprucelabs/heartwood-skill",
    "publishConfig": {
        "access": "public"
    },
    "version": "10.0.3",
    "description": "Command line interface for building Spruce skills",
    "main": "./build/index.js",
    "keywords": [
        "heartwood",
        "skill",
        "sprucebot",
        "spruce",
        "skills",
        "sprucelabs"
    ],
    "homepage": "https://github.com/sprucelabsai/spruce-heartwood-workspace",
    "bugs": {
        "url": "https://github.com/sprucelabsai/spruce-heartwood-workspace/issues"
    },
    "scripts": {
        "build": "npm run clean && npm run build:node",
        "build:node": "tsc | true",
        "watch": "chokidar 'src/**/*' 'index.ts' '.spruce' -c 'npm run build'",
        "clean": "rm -rf build/",
        "lint": "eslint '**/*.ts' && tsc -p . --noEmit",
        "lint:fix": "eslint --fix '**/*.ts'",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@sprucelabs/path-resolver": "^1.2.1",
        "@sprucelabs/schema": "^1.6.0",
        "react": "^16.13.1"
    },
    "devDependencies": {
        "@sprucelabs/test": "1.2.0-prerelease-jest.3",
        "chokidar-cli": "^2.1.0",
        "concurrently": "^5.0.2",
        "conventional-changelog-sprucelabs": "^1.1.0",
        "eslint": "^5",
        "eslint-config-spruce": "^10.2.0",
        "prettier": "^1.13",
        "ts-node": "^8.8.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.8.3"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/build/",
            "<rootDir>/node_modules/"
        ],
        "moduleNameMapper": {
            "^#spruce:schema/(.*)$": "<rootDir>/.spruce/schemas/$1",
            "^#spruce/(.*)$": "<rootDir>/.spruce/$1"
        }
    }
}