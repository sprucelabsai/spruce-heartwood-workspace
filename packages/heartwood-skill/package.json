{
    "name": "@sprucelabs/heartwood-skill",
    "publishConfig": {
        "access": "public"
    },
    "version": "10.0.3",
    "description": "Command line interface for building Spruce skills",
    "main": "./build/index.js",
    "keywords": [
        "heartwood",
        "skill",
        "sprucebot",
        "spruce",
        "skills",
        "sprucelabs"
    ],
    "homepage": "https://github.com/sprucelabsai/spruce-heartwood-workspace",
    "bugs": {
        "url": "https://github.com/sprucelabsai/spruce-heartwood-workspace/issues"
    },
    "scripts": {
        "build": "npm run clean && npm run build:node",
        "build:node": "tsc | true",
        "watch": "chokidar 'src/**/*' 'index.ts' '.spruce' -c 'npm run build'",
        "clean": "rm -rf build/",
        "lint": "eslint '**/*.ts' && tsc -p . --noEmit",
        "lint:fix": "eslint --fix '**/*.ts'",
        "test": "ava **/*.test.ts",
        "test:watch": "ava  **/*.test.ts --watch"
    },
    "dependencies": {
        "@sprucelabs/path-resolver": "^1.2.0",
        "@sprucelabs/schema": "^1.3.2",
        "react": "^16.13.1"
    },
    "devDependencies": {
        "@sprucelabs/test": "^1.0.0",
        "ava": "^3.7.0",
        "chokidar-cli": "^2.1.0",
        "concurrently": "^5.0.2",
        "conventional-changelog-sprucelabs": "^1.1.0",
        "eslint": "^5",
        "eslint-config-spruce": "^10.0.5",
        "prettier": "^1.13",
        "ts-node": "^8.8.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.8.3"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
