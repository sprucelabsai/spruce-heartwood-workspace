{
  "name": "@sprucelabs/heartwood-skill",
  "publishConfig": {
    "access": "public"
  },
  "version": "10.2.0",
  "description": "Command line interface for building Spruce skills",
  "main": "./build/index.js",
  "keywords": [
    "heartwood",
    "skill",
    "sprucebot",
    "spruce",
    "skills",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-heartwood-workspace",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-heartwood-workspace/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run build.babel",
    "build.node": "tsc | true",
    "build.babel": "babel . --root-mode upward --source-maps --extensions \".js\",\".ts\" --copy-files --out-dir ./build",
    "watch": "chokidar 'src/**/*' 'index.ts' '.spruce' -c 'npm run build'",
    "clean": "rm -rf build/",
    "lint": "eslint '**/*.ts' && tsc -p . --noEmit",
    "lint.fix": "eslint --fix '**/*.ts'",
    "test": "jest",
    "test.watch": "jest --watch",
    "arkit": "arkit -f index.ts -o docs/images/arkit.svg",
    "arkit.png": "arkit -f index.ts -o docs/images/arkit.png"
  },
  "dependencies": {
    "@sprucelabs/path-resolver": "^1.3.4",
    "@sprucelabs/schema": "^4.0.8"
  },
  "devDependencies": {
    "@sprucelabs/test": "^5.2.6",
    "arkit": "^1.6.4",
    "chokidar-cli": "^2.1.0",
    "conventional-changelog-sprucelabs": "^1.1.1",
    "eslint": "^7.4.0",
    "eslint-config-spruce": "^10.5.6",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^#spruce:schema/(.*)$": "<rootDir>/.spruce/schemas/$1",
      "^#spruce/(.*)$": "<rootDir>/.spruce/$1"
    }
  }
}
