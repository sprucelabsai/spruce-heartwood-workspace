{
    "compilerOptions": {
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "#spruce:schema/*": ["../heartwood-skill/build/.spruce/schemas/*"],
            "#spruce/*": ["../heartwood-skill/build/.spruce/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib", ".storybook"]
}
