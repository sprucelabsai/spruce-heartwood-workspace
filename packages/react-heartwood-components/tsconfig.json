{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "#spruce:fieldTypes": ["../heartwood-skill/.spruce/schemas/fields.types"],
      "#spruce/*": ["../heartwood-skill/.spruce/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", ".storybook"]
}
