    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 5500,
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test:file",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
            "runtimeArgs": ["debug", "${file}", "--break"],
            "console": "integratedTerminal",
            "port": 9229,
            "skipFiles": ["<node_internals>/**/*.js"]
        }
    ]
}
